{% extends 'base.jinja' %}

{% block content %} 
    <style>
        p {
            padding: 0px;
            margin: 0px;
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none; 
            -ms-user-select: none; 
            user-select: none;
            font-family: 'Trebuchet MS', sans-serif;
        }
        html, body {
            margin: 0;
            padding: 0;
            height: 95%;
        }
        .main-divisor-wpr {
            display: flex;
            background-color: #FFFFFF;
            width: 100%;
            height: 100%;
        }

        .main-page {
            flex:5;
        }

        .content-container {
            width: 100%;
            height: 100%;
        }

        .main-content-wpr {
            width: 95%;
            height: 100%;
            margin: auto;
            margin-top: 20px;
        }
    </style>

    <body>
        
        {% include './components/header/header.jinja' %}

        <div class="main-divisor-wpr">
            {% include './components/sidebar/sidebar.jinja' %}

            <div class="main-page">
                <div class="main-content-wpr">
                    {% include './components/messager/messager.jinja' %}

                </div>
            </div>


        </div>


    </body>


{% endblock %}
